<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bd.fr.beachcamp.MultiActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="400dp"
        android:layout_height="300dp"


        />

    <Spinner
        android:id="@+id/MultiSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/mapView"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/MultiDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewDateCreation"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/NumberRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewParticipants"
        android:elevation="1dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/AddMultiBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Multi"
        android:layout_marginEnd="12dp"
        android:layout_below="@+id/NumberRegistration"
        android:layout_alignParentEnd="true" />

    <TextView

        android:id="@+id/textViewDateCreation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Date de crÃ©ation : "
        android:layout_below="@+id/MultiSpinner" />

    <TextView
        android:id="@+id/textViewParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textAlignment="center"
        android:text="Nombre de participants :"
        android:layout_below="@+id/MultiDate"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/AddMultiBtn"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
